{
  "extends": ["airbnb-base", "plugin:unicorn/recommended", "plugin:n/recommended", "plugin:eslint-comments/recommended"],
  "plugins": ["unicorn", "n", "eslint-comments"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "unicorn/prevent-abbreviations": 0,
    "eslint-comments/no-unused-disable": "error",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": ["index.test-d.ts"] }]
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "extends": ["plugin:mocha/recommended"],
      "plugins": ["mocha"],
      "env": {
        "mocha": true
      },
      "rules": {
        "mocha/no-mocha-arrows": 0
      }
    },
    {
      "files": ["**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "rules": {
        "max-len": ["error", { "code": 100 }],
        "no-unused-vars": "off",
        "no-redeclare": "off",
        "@typescript-eslint/no-unused-vars": ["error"],
        "@typescript-eslint/no-redeclare": ["error"]
      }
    }
  ]
}
